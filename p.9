#include <stdio.h>
#include <limits.h>

int maxProduct(int arr[], int n)
{
    int maxProduct = 0;

    for (int i = 0; i < n - 2; i++)
        for (int j = i + 1; j < n - 1; j++)
            for (int k = j + 1; k < n; k++)
                if (arr[i] * arr[j] * arr[k] > maxProduct)
                    maxProduct = arr[i] * arr[j] * arr[k];

    return maxProduct;
}

int main()
{
    int n;

    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);

    if (n < 3) {
        printf("Array must contain at least 3 elements to form a triplet.\n");
        return 1;
    }

    int arr[n];

    printf("Enter the elements of the array:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    printf("Maximum product of a triplet: %d\n", maxProduct(arr, n));

    return 0;
}
